.comment-fixed {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.98) 100%);
  backdrop-filter: blur(10px);
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 文章封面图片容器 */
.only-img-container {
  width: 100%;
  height: 320rpx;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

/* 文章封面图片 */
.only-img {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}

.menu-box {
  display: flex;
  height: 130rpx;
  align-items: center;
}

.menu-box.cu-list.grid > .cu-item {
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu-box .item {
  color: #333;
}

.menu-box .item text {
  font-size: 22rpx;
  margin-top: 4rpx;
  line-height: 1;
}

.menu-box .item .cuIcon-share,
.menu-box .item .cuIcon-favor,
.menu-box .item .cuIcon-favorfill,
.menu-box .item .cuIcon-appreciate,
.menu-box .item .cuIcon-appreciatefill,
.menu-box .item .cuIcon-refund {
  font-size: 44rpx;
  margin-bottom: 2rpx;
}

.share-button {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 1;
}

@-webkit-keyframes emoji-move-in {
  0% {
    margin-bottom: -160rpx;
  }

  100% {
    margin-bottom: 0;
  }
}

@keyframes emoji-move-in {
  0% {
    margin-bottom: -160rpx;
  }

  100% {
    margin-bottom: 0;
  }
}

@-webkit-keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -160rpx;
  }
}

@keyframes emoji-move-out {
  0% {
    margin-bottom: 0;
  }

  100% {
    margin-bottom: -160rpx;
  }
}

.detail-body {
  line-height: 64rpx;
  letter-spacing: 1px;
  overflow: hidden;
  overflow-x: hidden;
  position: relative;
}

/* 授权弹窗样式 */
.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.auth-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.auth-modal-content {
  position: relative;
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.auth-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.auth-modal-desc {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.auth-form {
  margin-bottom: 40rpx;
}

.auth-form-item {
  margin-bottom: 30rpx;
}

.auth-avatar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.auth-form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  text-align: left;
  width: 100%;
}

.auth-avatar-item .auth-form-label {
  text-align: center;
}

.avatar-wrapper {
  width: 160rpx;
  height: auto;
  margin: 0;
  padding: 0;
  background-color: transparent;
  border: none;
  display: block;
  line-height: normal;
}

.avatar-wrapper::after {
  border: none;
}

.avatar-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  display: block;
  background-color: #f5f5f5;
  border: 2rpx solid #e5e5e5;
}

.avatar-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  text-align: center;
  display: block;
}

.auth-input {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.auth-modal-footer {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.auth-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 0;
  padding: 0;
}

.auth-btn::after {
  border: none;
}

.auth-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.auth-btn.confirm {
  background-color: #07c160;
  color: #fff;
}

