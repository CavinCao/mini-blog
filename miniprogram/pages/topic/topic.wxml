<view class="cu-list menu card-menu margin-top" wx:for="{{classifyList}}" wx:key="id" wx:for-index="idx" wx:for-item="item"  id="{{item.id}}" data-tname="{{item.name}}" bindtap='openTopicPosts'>
    <view class="cu-item">
        <view class="content padding-tb-sm">
            <view>
                <text class="cuIcon-title text-orange "></text>
                {{item.name}}
            </view>
            <view class="text-gray text-sm">
                {{item.desc}}
            </view>
        </view>
    </view>
</view>