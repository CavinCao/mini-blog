/* miniprogram/pages/index/index.wxss */

/* 活动位样式 */
.activity-swiper {
  width: 100%;
  height: 350rpx;
  background-color: #f1f1f1;
}

.screen-swiper {
  height: 350rpx;
  min-height: 350rpx;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.margin-bottom-sm {
  margin-bottom: 20rpx;
}

/* 文章封面图片容器 */
.only-img-container {
  width: 100%;
  height: 320rpx;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

/* 文章封面图片 */
.only-img {
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
}
